{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[RELEASE] build renderer",
            "type": "shell",
            "command": "mkdir -p renderer/build && cd renderer/build && cmake .. && cmake --build . -j 4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "[DEBUG] build renderer",
            "type": "shell",
            "command": "mkdir -p renderer/build && cd renderer/build && cmake -DCMAKE_BUILD_TYPE=Debug .. && cmake --build . -j 4",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "[CLEAN] build renderer",
            "type": "shell",
            "command": "rm -rf renderer/build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}